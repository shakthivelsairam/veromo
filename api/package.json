{
  "name": "lims-api",
  "version": "1.0.0",
  "description": "LIMS API",
  "main": "index.js",
  "scripts": {
    "start": "node build/index.js",
    "local": "env $(cat .EnvLocal | xargs) bash -c \"nodemon --exec babel-node src/index.js\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "echo 'Transpiling';rm -rf build/ && babel src --out-dir build --copy-files",
    "eslint": "echo 'Running eslint..';$(npm bin)/eslint . --ext .js",
    "prettier-format": "echo 'Running prettier formatter..'; $(npm bin)/prettier --loglevel error --write .",
    "prettier-check": "echo 'Running prettier check..'; $(npm bin)/prettier --check ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.16.3",
    "axios": "^0.24.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.6",
    "node-fetch": "^3.1.0",
    "promise-mysql": "^5.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "eslint": "^8.2.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "pre-commit": "^1.2.2",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6"
  },
  "jest": {
    "verbose": true
  },
  "pre-commit": [
    "eslint",
    "prettier-check",
    "build"
  ]
